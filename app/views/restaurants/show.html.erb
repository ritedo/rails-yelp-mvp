<div class="container">
<h1><%= @restaurant.name %></h1>
  <h2><%= @restaurant.category %></h2>
  <p>Address: <%= @restaurant.address %> - Phone number: <%= @restaurant.phone_number %></p>
  <% @restaurant.reviews.each do |review| %>
    <h3><%= "*" * review.rating %></h3>
    <p><%= review.content %></p>
  <% end %>
  <h1>Add a review</h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :rating %>
    <%= f.input :content %>
    <%= f.submit "add a review", class: "btn btn-primary" %>
  <% end %>
</div>
