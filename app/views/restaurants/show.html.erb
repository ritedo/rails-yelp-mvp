<div class="container">
<h1><%= @restaurant.name %></h1>
  <h2><%= @restaurant.category %></h2>
  <p>Address: <%= @restaurant.address %> - Phone number: <%= @restaurant.phone_number %></p>
  <% @restaurant.reviews.each do |review| %>
    <h3><%= "*" * review.rating %></h3>
    <p><%= review.content %></p>
  <% end %>
  <%= link_to "Add a review", new_restaurant_review_path(@restaurant) %>
</div>
